{
  "meta": {
    "version": "2.0",
    "design_system": "Material You + Glassmorphism",
    "target": "Production-grade, investor-demo ready"
  },

  "theme": {
    "scheme": "dark",
    "surface": {
      "base": "#0F0F0F",
      "elev1": "rgba(22,22,22,0.64)",
      "elev2": "rgba(30,30,30,0.75)",
      "elev3": "rgba(38,38,38,0.85)"
    },
    "primary": "#00E5FF",
    "secondary": "#FF0266",
    "success": "#00F5A0",
    "warning": "#FFD600",
    "error": "#FF3D71",
    "text": {
      "primary": "rgba(255,255,255,0.92)",
      "secondary": "rgba(255,255,255,0.70)",
      "disabled": "rgba(255,255,255,0.38)"
    },
    "blur": "12px",
    "radius": "16px",
    "shadows": {
      "xs": "0 1px 1px rgba(0,0,0,0.15)",
      "sm": "0 4px 8px rgba(0,0,0,0.20)",
      "md": "0 8px 24px rgba(0,0,0,0.30)",
      "lg": "0 16px 48px rgba(0,0,0,0.40)"
    },
    "transitions": {
      "fast": "all 140ms cubic-bezier(0.4,0,0.2,1)",
      "smooth": "all 280ms cubic-bezier(0.4,0,0.2,1)",
      "bounce": "all 400ms cubic-bezier(0.68,-0.55,0.27,1.55)"
    }
  },

  "layout": {
    "type": "sidebar-dual-panel",
    "sidebar": {
      "width": "260px",
      "collapsed_width": "72px",
      "avatar": true,
      "logo": "assets/logo.svg",
      "footer": "Â© Ansys PyEDB"
    },
    "topbar": {
      "height": "64px",
      "breadcrumbs": true,
      "global_search": true,
      "theme_toggle": false
    },
    "content": {
      "max_width": "1440px",
      "gutter": "24px"
    }
  },

  "typography": {
    "font": "Inter",
    "weights": [400, 500, 600, 700],
    "sizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem"
    }
  },

  "animations": {
    "page_enter": "fade-in-up 320ms ease-out",
    "card_hover": "lift 240ms ease-out",
    "skeleton": "shimmer 1.2s infinite linear",
    "toast": "slide-in-right 200ms ease-out"
  },

  "skeletons": {
    "rows": 6,
    "height": "72px",
    "radius": "12px"
  },

  "components": {
    "metric_card": {
      "height": "124px",
      "icon_size": "32px",
      "sparkline": true,
      "delta_indicator": true,
      "glass": true
    },
    "data_table": {
      "striped": false,
      "divider": "rgba(255,255,255,0.08)",
      "hover": "rgba(255,255,255,0.05)",
      "sort_icons": true,
      "pagination": {
        "sizes": [10, 25, 50],
        "show_info": true
      },
      "row_height": "52px",
      "border_radius": "12px"
    },
    "button": {
      "height": "40px",
      "radius": "8px",
      "font_weight": 500,
      "loader": "pulse-dot",
      "elevate_on_hover": 4
    },
    "modal": {
      "max_width": "680px",
      "padding": "32px",
      "close_button": "top-right",
      "backdrop_blur": "8px"
    },
    "form": {
      "input_radius": "8px",
      "input_height": "44px",
      "focus_ring": "0 0 0 2px var(--primary)",
      "label_weight": 500,
      "group_border": "1px solid rgba(255,255,255,0.12)"
    },
    "toast": {
      "position": "bottom-right",
      "max": 4,
      "timeout": 4000,
      "progress": true
    }
  },

  "color_palette_generator": {
    "primary": {
      "main": "#00E5FF",
      "dark": "#00B8D4",
      "light": "#66F9FF",
      "contrast": "#000000"
    },
    "semantic": {
      "success": "#00F5A0",
      "warning": "#FFD600",
      "error": "#FF3D71",
      "info": "#00E5FF"
    },
    "neutral": {
      "grey50": "#F9F9F9",
      "grey100": "#F2F2F2",
      "grey900": "#0F0F0F",
      "grey950": "#000000"
    }
  },

  "accessibility": {
    "aria_live": "polite",
    "focus_visible": "2px solid var(--primary)",
    "min_contrast": 4.5,
    "reduced_motion": true
  },

  "responsive_breakpoints": {
    "xs": "0px",
    "sm": "600px",
    "md": "960px",
    "lg": "1280px",
    "xl": "1920px"
  },

  "custom_css": [
    "@keyframes fade-in-up { 0% { opacity:0; transform:translateY(12px); } 100% { opacity:1; transform:translateY(0); } }",
    "@keyframes lift { 0% { transform:translateY(0); } 100% { transform:translateY(-4px); } }",
    "@keyframes shimmer { 0% { background-position:-200% 0; } 100% { background-position:200% 0; } }",
    "@keyframes slide-in-right { 0% { transform:translateX(100%); } 100% { transform:translateX(0); } }"
  ]
}